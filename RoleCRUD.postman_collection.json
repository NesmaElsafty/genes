{
  "info": {
    "name": "Role CRUD API",
    "_postman_id": "role-crud-collection",
    "description": "Test collection for role CRUD endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Roles",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/roles", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "roles"] }
      }
    },
    {
      "name": "Get Role By ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/roles/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "roles", "1"] }
      }
    },
    {
      "name": "Create Role",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"manager\",\n  \"permissions\": [\"add animals\", \"view health\"]\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://localhost:8000/api/roles", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "roles"] }
      }
    },
    {
      "name": "Update Role",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"updated-manager\",\n  \"permissions\": [\"add animals\"]\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://localhost:8000/api/roles/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "roles", "1"] }
      }
    },
    {
      "name": "Delete Role",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/roles/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "roles", "1"] }
      }
    }
  ]
} 