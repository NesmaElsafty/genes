{
  "info": {
    "name": "Farm CRUD API",
    "_postman_id": "farm-crud-collection",
    "description": "Test collection for farm CRUD endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Farms (Paginated)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/farms?per_page=10", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "farms"], "query": [{"key": "per_page", "value": "10"}] }
      }
    },
    {
      "name": "Get Farm By ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/farms/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "farms", "1"] }
      }
    },
    {
      "name": "Create Farm",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Farm\",\n  \"user_id\": 1,\n  \"city\": \"Test City\",\n  \"location\": \"Test Location\",\n  \"postal_code\": \"12345\",\n  \"capacity\": 100\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://localhost:8000/api/farms", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "farms"] }
      }
    },
    {
      "name": "Update Farm",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Farm\",\n  \"city\": \"Updated City\",\n  \"location\": \"Updated Location\",\n  \"postal_code\": \"54321\",\n  \"capacity\": 200\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": { "raw": "http://localhost:8000/api/farms/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "farms", "1"] }
      }
    },
    {
      "name": "Delete Farm",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/farms/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "farms", "1"] }
      }
    }
  ]
} 