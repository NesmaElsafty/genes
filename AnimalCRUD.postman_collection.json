{
  "info": {
    "name": "Animal CRUD API",
    "_postman_id": "animal-crud-collection",
    "description": "Test collection for animal CRUD endpoints with media upload.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Animals",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/animals", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "animals"] }
      }
    },
    {
      "name": "Get Animal By ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/animals/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "animals", "1"] }
      }
    },
    {
      "name": "Create Animal (with files)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "animal_id", "value": "A-001", "type": "text" },
            { "key": "sir_id", "value": "S-001", "type": "text" },
            { "key": "dam_id", "value": "D-001", "type": "text" },
            { "key": "gender", "value": "male", "type": "text" },
            { "key": "farm_id", "value": "1", "type": "text" },
            { "key": "event_id", "value": "1", "type": "text" },
            { "key": "breed_id", "value": "1", "type": "text" },
            { "key": "files", "type": "file", "src": ["/path/to/file1.jpg", "/path/to/file2.pdf"] }
          ]
        },
        "url": { "raw": "http://localhost:8000/api/animals", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "animals"] }
      }
    },
    {
      "name": "Update Animal (with files)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "X-HTTP-Method-Override", "value": "PUT" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "animal_id", "value": "A-001-updated", "type": "text" },
            { "key": "gender", "value": "female", "type": "text" },
            { "key": "files", "type": "file", "src": ["/path/to/file3.docx"] }
          ]
        },
        "url": { "raw": "http://localhost:8000/api/animals/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "animals", "1"] }
      }
    },
    {
      "name": "Delete Animal",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8000/api/animals/1", "protocol": "http", "host": ["localhost"], "port": "8000", "path": ["api", "animals", "1"] }
      }
    }
  ]
} 